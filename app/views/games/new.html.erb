<div class="container pt-5">
  <h1>New Game</h1>
  <div class="letters-container">
    <% @grid.each do |letter| %>
      <div class="letter-box mb-5"> <%= letter %> </div>
    <% end %>
  </div>

  <h5>What is the longest word you can find?</h5>

  <div class="pt-3 ">
    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="input-group">
        <input type="text" class="form-control" name="word">
        <input type='hidden' value="<%= @grid.join %>" name='grid'>
        <button class="btn btn-outline-secondary" type="submit">Play</button>
      </div>
    </form>
  </div>
</div>
